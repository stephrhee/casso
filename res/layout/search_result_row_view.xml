<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey_50"
        android:paddingLeft="@dimen/search_activity_left_right_padding"
        android:paddingRight="@dimen/search_activity_left_right_padding"
        android:paddingTop="@dimen/search_suggestions_row_view_top_bottom_padding"
        android:paddingBottom="@dimen/search_suggestions_row_view_top_bottom_padding"
        >

    <TextView
            android:id="@+id/search_result_row_view_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/search_suggestions_row_view_font_size"
            android:singleLine="true"
            style="@style/MuseumLabelTypefaceStyle" />

    <TextView
            android:id="@+id/search_result_row_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/search_suggestions_row_view_font_size"
            android:singleLine="true"
            style="@style/MuseumLabelTypefaceStyle" />

</LinearLayout>
