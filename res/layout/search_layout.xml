<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center_horizontal"
        android:background="@color/white"
        >

    <include
            android:id="@+id/search_artist_search_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/search_box_edit_text"
            />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/search_activity_left_right_padding"
            android:layout_marginRight="@dimen/search_activity_left_right_padding"
            android:background="@color/gray"
            />

    <include
            android:id="@+id/search_title_search_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/search_box_edit_text"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/blue"
            >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/search_activity_left_right_padding"
                android:paddingRight="@dimen/search_activity_left_right_padding"
                android:paddingTop="@dimen/search_suggestions_top_bottom_padding"
                android:paddingBottom="@dimen/search_suggestions_top_bottom_padding"
                android:text="@string/search_suggestions_string"
                android:textSize="@dimen/search_suggestions_font_size"
                android:textColor="@color/dark_gray"
                android:background="@color/light_gray"
                />

        <ListView
                android:id="@+id/search_artist_results_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        <ListView
                android:id="@+id/search_artwork_titles_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

    </LinearLayout>

</LinearLayout>
