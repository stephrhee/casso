<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/blue_grey_100">

        <casso.widget.ImageViewAndLoadingScreen
                android:id="@+id/artwork_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/grey_50"
                android:layout_margin="@dimen/artwork_profile_outer_box_padding">

            <TextView
                    android:id="@+id/artwork_profile_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/search_box_edit_text_padding"
                    android:paddingLeft="@dimen/search_box_edit_text_padding"
                    android:paddingRight="@dimen/search_box_edit_text_padding"
                    android:textSize="@dimen/artwork_profile_artist_font_size"
                    style="@style/MuseumLabelTypefaceStyle" />

            <TextView
                    android:id="@+id/artwork_profile_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/search_box_edit_text_padding"
                    android:paddingLeft="@dimen/search_box_edit_text_padding"
                    android:paddingRight="@dimen/search_box_edit_text_padding"
                    android:textSize="@dimen/artwork_profile_artwork_font_size"
                    style="@style/MuseumLabelTypefaceStyle" />

            <TextView
                    android:id="@+id/artwork_profile_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/search_box_edit_text_padding"
                    android:paddingRight="@dimen/search_box_edit_text_padding"
                    android:paddingBottom="@dimen/search_box_edit_text_padding"
                    android:textSize="@dimen/artwork_profile_year_font_size"
                    style="@style/MuseumLabelTypefaceStyle" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/gray" />

            <TextView
                    android:id="@+id/artwork_profile_tags_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/search_box_edit_text_padding"
                    android:text="@string/artwork_profile_tags_string"
                    android:textSize="@dimen/artwork_profile_tags_font_size"
                    style="@style/MuseumLabelTypefaceStyle" />

            <TextView
                    android:id="@+id/artwork_profile_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/search_box_edit_text_padding"
                    android:textSize="@dimen/artwork_profile_tags_font_size"
                    style="@style/MuseumLabelTypefaceStyle" />

        </LinearLayout>

        <casso.widget.CenterLockHorizontalScrollview
                android:id="@+id/suggested_artworks_scrollview"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/suggested_artworks_dim"
                android:layout_margin="@dimen/artwork_profile_outer_box_padding">

        <LinearLayout
                android:id="@+id/suggested_artworks_scrollview_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>

        </casso.widget.CenterLockHorizontalScrollview>

    </LinearLayout>

</ScrollView>
