<?xml version="1.0" encoding="utf-8"?>
<casso.widget.SquareFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <casso.widget.CircularProgressView
            android:id="@+id/image_view_and_loading_screen_circular_progress_view"
            android:layout_width="@dimen/artwork_profile_circular_progress_view_size"
            android:layout_height="@dimen/artwork_profile_circular_progress_view_size"
            android:layout_gravity="center"
            app:cpv_indeterminate="true"
            app:cpv_animAutostart="true" />

    <ImageView
            android:id="@+id/image_view_and_loading_screen_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

</casso.widget.SquareFrameLayout>
